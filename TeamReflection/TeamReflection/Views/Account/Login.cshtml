@model TeamReflection.Models.AccountModel
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@if (ViewBag.errorMessage != null && ViewBag.errorMessage != "")
{
    <div class="">@ViewBag.errorMessage</div>
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { enctype = "multipart/form-data", @class = "account-form" }))
{
    @Html.LabelFor(labelUsername => labelUsername.Username, "Username");
    @Html.TextBoxFor(inputUsername => inputUsername.Username);
    
    @Html.LabelFor(labelPassword => labelPassword.Password, "Password");
    @Html.PasswordFor(inputPassword => inputPassword.Password);
    <input type="submit" value="Login" />
}